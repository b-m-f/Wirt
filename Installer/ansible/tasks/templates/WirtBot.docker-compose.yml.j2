version: "3.4"

services:
  WirtBot:
    image: bmff/wirtbot:test
    network_mode: host
    ports:
      - 80:80
      - 3030:3030
      - 10101:10101/udp
    restart: "unless-stopped"
    cap_add:
      - NET_ADMIN
    volumes:
      - /etc/wireguard:/etc/wireguard
      - ../coredns/data:/dns
    environment:
      - "PUBLIC_KEY={{ wirtui_public_key }}"
      - "PORT=3030"
      - "MANAGED_DNS_ENABLED=1"
      - "MANAGED_DNS_DEVICE_FILE=/dns/Corefile"
      - "CONFIG_PATH=/wireguard/server.conf"

